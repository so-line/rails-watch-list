<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dp4lgffrz/image/upload/v1677248928/cinema-seats.jpg);">
  <div class="container">
    <h1>Movie Lists</h1>
  </div>
</div>
<br>
<div class="container align-items-center">
  <div class="row">
  <% @lists.each do |list| %>
    <div class="col-12 col-lg-4">
        <div class="card text-center text-black border-warning m-2">
          <div class="card photo" class="card-img-top">
          <br>
            <h4><%= list.name %></h4>
            <div class="card-body">
              <button type="button" class="btn btn-outline-warning btn-sm"><%= link_to "See", list  %></button>
            </div>
          </div>
        </div>
    </div>
  <% end %>
  </div>
  <br>
</div>
